{# src/web/templates/signin.twig #}
{% extends 'layout.twig' %}

{% block title %}Connexion - La Chaudière Agenda{% endblock %}

{#
C'est ici que tout le CSS spécifique à cette page est ajouté.
Ce bloc sera inséré dans la section <head> de la page HTML.
#}
{% block content %}
    <style>
        main {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        /* Styles pour le conteneur principal du formulaire */
        .auth-container {
            background: linear-gradient(135deg, var(--surface-color) 0%, #1e1e3f 100%);
            border: 1px solid var(--border-color);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-lg);
            padding: 40px;
            min-width: 500px;
            margin: 0; /* Essentiel pour laisser le parent (main en flex) gérer le centrage */
            text-align: center;
            backdrop-filter: blur(15px);
            animation: fadeInScale 0.6s ease-out forwards;

        }

        @keyframes fadeInScale {
            from {
                opacity: 0;
                transform: scale(0.95) translateY(20px);
            }
            to {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        .auth-container h2 {
            font-size: 2.2rem;
            color: var(--text-primary);
            margin-bottom: 30px;
            position: relative;
            padding-bottom: 10px;
        }

        .auth-container h2::after {
            content: '';
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            bottom: 0;
            width: 80px;
            height: 3px;
            background: var(--gradient-primary);
            border-radius: 2px;
        }

        /* Groupes de formulaire (label + input) */
        .form-group {
            margin-bottom: 25px;
            text-align: left;
        }

        .form-group label {
            display: block;
            font-size: 0.95rem;
            color: var(--text-secondary);
            margin-bottom: 8px;
            font-weight: 500;
        }

        .form-group input[type="email"],
        .form-group input[type="password"],
        .form-group input[type="text"] { /* Ajouté pour l'inscription si tu l'utilises */
            width: 100%;
            padding: 14px 18px;
            background: var(--surface-hover);
            border: 2px solid var(--border-color);
            border-radius: var(--border-radius-small);
            color: var(--text-primary);
            font-size: 1rem;
            transition: var(--transition);
            outline: none;
            box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        .form-group input:focus {
            border-color: var(--primary-color);
            box-shadow: var(--glow), 0 0 0 3px rgba(99, 102, 241, 0.3);
            background: var(--surface-color);
        }

        /* Bouton d'authentification */
        .auth-button {
            padding: 15px 25px;
            font-size: 1rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            background: var(--gradient-primary);
            color: var(--text-primary);
            border: none;
            border-radius: var(--border-radius);
            cursor: pointer;
            transition: var(--transition);
            box-shadow: 0 5px 20px rgba(99, 102, 241, 0.4);
            position: relative;
            overflow: hidden;
            margin-top: 20px;
        }

        .auth-button:hover {
            transform: translateY(-5px);
            box-shadow: var(--glow), 0 10px 30px rgba(99, 102, 241, 0.6);
        }

        .auth-button:hover::before {
            transform: translateX(5px);
        }

        .auth-button:active {
            transform: translateY(-2px);
        }

        /* Liens d'authentification (ex: S'inscrire) */
        .auth-links {
            margin-top: 30px;
            font-size: 0.95rem;
            color: var(--text-muted);
        }

        .auth-links a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            border-bottom: 1px solid transparent;
        }

        .auth-links a:hover {
            color: var(--secondary-color);
            border-color: var(--secondary-color);
            text-shadow: 0 0 5px rgba(139, 92, 246, 0.5);
        }

        /* Alertes (pour les messages d'erreur) */
        .alert {
            padding: 15px;
            border-radius: var(--border-radius-small);
            margin-bottom: 25px;
            font-weight: 500;
            text-align: center;
            border: 1px solid;
            animation: fadeInDown 0.4s ease-out;
        }

        .alert-danger {
            background-color: rgba(239, 68, 68, 0.15); /* Rouge avec transparence */
            color: var(--danger-color); /* Couleur du texte rouge */
            border-color: var(--danger-color);
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Media Queries pour la réactivité */
        @media (max-width: 1024px) {
            main {
                padding: 1.5rem;
                margin: 1rem;
            }
        }

        @media (max-width: 600px) {
            .auth-container {
                margin: 0; /* Assure que le centrage est bien géré par main */
                padding: 30px 20px;
            }

            .auth-container h2 {
                font-size: 1.8rem;
            }

            .form-group input {
                padding: 12px 15px;
                font-size: 0.95rem;
            }

            .auth-button {
                padding: 12px 20px;
                font-size: 0.9rem;
            }

            .auth-button::before {
                margin-right: 8px;
                font-size: 1em;
            }
        }
    </style>

    <div class="auth-container">
        <h2>Connexion</h2>

        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}

        <form method="POST" action="/signin">

            <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
            <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">

            <div class="form-group">
                <label for="email">Email :</label>
                <input type="email" id="email" name="email" required>
            </div>

            <div class="form-group">
                <label for="password">Mot de passe :</label>
                <input type="password" id="password" name="password" required>
            </div>

            <button type="submit" class="auth-button">Se connecter</button>
        </form>

        <div class="auth-links">
            <p>Pas encore de compte ? <a href="/signup">S'inscrire</a></p>
        </div>
    </div>

{% endblock %}
{% extends 'layout.twig' %}

{% block content %}

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/categoryForm.css">
    </head>



{% if error %}
    <p style="color: red;">{{ error|e }}</p>
{% endif %}

{% if success %}
    <p style="color: green;">Catégorie créée avec succès !</p>
{% endif %}

<form method="POST" action="/admin/create/category">
    {# Protection CSRF #}
    <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
    <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">

    <h2>Créer une catégorie</h2>

    <label for="name">Libellé :</label><br>
    <input type="text" id="name" name="name" value="{{ old.name|default('')|e }}" required><br><br>

    <label for="description">Description :</label><br>
    <textarea id="description" name="description" rows="6" required>{{ old.description|default('')|e }}</textarea><br><br>

    <button type="submit">Créer</button>
</form>
{% endblock %}
